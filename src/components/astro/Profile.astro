---
const { name, photo, bio, start } = Astro.props
---

<div class="flex flex-wrap flex-col justify-center items-center flex-1 gap-4">
  <img src={photo} alt="profile picture" class={`${start ? "object1" : "object2"} rounded-3xl shadow-[8px_8px_8px_2px_rgba(0,0,0,0.3)]  shadow-cyan-600`} width="300" height="300">
  <div class="w-fit">
    <h2 class="typed text-2xl text-center">{name}</h2>
  </div>
  <h2 class="text-lg font-light max-w-prose text-center w-56">{bio}</h2>
</div>

<style> 
  .typed {
    overflow: hidden;
    white-space: nowrap;
    border-right: 2px solid;
    width: 0;
    animation: typing 1.5s steps(30, end) forwards, blinking 1s 4 forwards, invisibling infinite;
  }
    
  @keyframes typing {
    from { width: 0 }
    to { width: 100% }
  }

  @keyframes blinking {
    0% {border-color: transparent}
    50% {border-color: white}
    100% {border-color: transparent}
  }

  @keyframes invisibling {
    0% {border-color: transparent}
    100% {border-color: transparent}
  }

  .object1 {
    animation: MoveUpDown 5s linear infinite;
  }

  @keyframes MoveUpDown {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  .object2 {
    animation: MoveDownUp 5s linear infinite;
  }

  @keyframes MoveDownUp {
    0%, 100% {
      transform: translateY(-20px);
    }
    50% {
      transform: translateY(0);
    }  
  }
</style>